<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/toolbar"></include>

    <ImageView
        android:id="@+id/readIndicatorBlue"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:layout_weight="20"
        android:background="@drawable/common_full_open_on_phone"
        app:srcCompat="@drawable/circle_blue" />

    <ImageView
        android:id="@+id/readIndicatorGray"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:layout_weight="20"
        android:background="@drawable/common_full_open_on_phone"
        android:visibility="invisible"
        app:srcCompat="@drawable/circle_grey" />

    <TextView
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/readIndicatorBlue"
        android:text="Sender Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/senderName"
        android:layout_alignBottom="@+id/senderName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emailSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/senderName"
        android:layout_below="@+id/readIndicatorBlue"
        android:maxLength="45"
        android:text="TextView" />

</RelativeLayout>
